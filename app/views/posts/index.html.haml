.top
  .top__header
    .top__header__logo
      %h1.top__header__logo__content
        = link_to "Sakusaku", root_path
    - if user_signed_in?
      .top__header__signOut
        = link_to "ログアウト", destroy_user_session_path, method: :delete
      .top__header__newPost
        = link_to "投稿", new_post_path
    - else
      .top__header__signIn
        = link_to "ログイン", new_user_session_path, class: 'post'
      .top__header__signUp
        = link_to "新規登録", new_user_registration_path, class: 'post'
    .top__header__nav
      %ul.top__header__nav__menu
        %li.top__header__nav__menu__list
          = link_to "Home", "#", class: 'bg-red'
        %li.top__header__nav__menu__list
          = link_to "About", "#"
        %li.top__header__nav__menu__list
          = link_to "News", "#"
        %li.top__header__nav__menu__list
          = link_to "Topics", "#"
        %li.top__header__nav__menu__list
          = link_to "Blog", "#"
  .top__section
    .top__section__main
      .top__section__main__heading
        .top__section__main__heading__image
          = image_tag "sample-1.jpg"
        .top__section__main__heading__content
          .top__section__main__heading__content__wrap
          - @post.each do |post|
            .top__section__main__heading__content__wrap__data
              = post.updated_at.strftime("%Y.%m.%d (%^a)")
            .top__section__main__heading__content__wrap__title
              = post.title.truncate(30)
            .top__section__main__heading__content__wrap__text
              = post.text.truncate(70)
      .top__section__main__log
        .top__section__main__log__title
          NEWS
        - @post_news.each do |post|
          .top__section__main__log__section
            .top__section__main__log__section__data
              = post.created_at.strftime("%Y.%m.%d (%^a)")
            .top__section__main__log__section__tag
              Rails
            .top__section__main__log__section__comment
              = post.title
      .top__section__main__article
        - @posts.each do |post|
          .top__section__main__article__content
            = link_to "詳細", post_path(post), class: "show-button"
            .top__section__main__article__content__image
              = image_tag "sample-2.jpg"
            .top__section__main__article__content__title
              = post.title.truncate(30)
            .top__section__main__article__content__text
              = post.text.truncate(35)
            .top__section__main__article__content__data
              = post.created_at.strftime("%Y.%m.%d")
            .top__section__main__article__content__edit
              - if user_signed_in?
                = link_to "編集", edit_post_path(post), class: "edit-button"
                = link_to "削除", post, method: :delete, data: { confirm: "#{post.title}を削除してもよろしいですか？" }, class: "delete-button"
